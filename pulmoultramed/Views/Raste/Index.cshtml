@model IEnumerable<Rastet>
@{
	ViewData["Title"] = "Rastet";
}


	<p style="font-size:clamp(30px,3vw,40px); margin-top:100px; margin-left:5%; color:#2b2764;"><b>Rastet</b></p>

<div class="row" style="margin-right:5%; margin-left:5%;margin-top:20px; ">

	@foreach(var item in Model)
	{
			<div class="col-md-4 col-xs-6 mb-3" >
			<div class="card shadow mt-5  bg-white rounded" style="max-width: 650px; min-width:201px; min-height:350px;">
				<div class="row g-0">
				
					
							<div class="col-md-12">
							@if(User.Identity.IsAuthenticated && User.IsInRole("Admin")){
	
							<p class="card-text" style="margin-right:25px;">
						
	<a class="text-dark float-right" style="padding:5px;" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
								
									<a class="text-dark float-right" style="padding:5px;" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
						
							
							
							</p>
							}
					</div>
					
				
					<div class="col-md-10 mx-auto">
								<a  asp-action="Details" asp-route-id="@item.Id">
										<img src="@item.FotoUrl"   style=" width: 100%;
    height: 40vh; 
    object-fit:contain;" alt="@item.Emri">
								</a>
				
					</div>

		
					
				</div>
			</div>
						<div class="col-md-12 mt-2 mb-2  " >
						
							

								<p class="card-text " style="font-family:'Times New Roman', Times, serif; font-size:clamp(17px,3vw,20px); display:flex;flex-direction:row;justify-content:space-around;">
									<b>@item.Emri</b>
									  <a class="btn btn-outline-primary " asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Detajet
                                </a>
								</p>
								    
                                
								
					
					</div>
					   
		</div>

	}

</div>
@if(User.Identity.IsAuthenticated && User.IsInRole("Admin")){
	
	@await Html.PartialAsync("_CreateItem","Raste")
}



