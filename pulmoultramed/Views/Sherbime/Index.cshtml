@model IEnumerable<Sherbimet>
@{
	ViewData["Title"] = "Sherbimet";
}

	<p style="font-size:clamp(30px,3vw,40px); margin-top:100px; margin-left:5%; color:#2b2764;"><b>Shërbimet</b></p>

<div class="row" style="margin-right:5%; margin-left:5%;margin-top:20px; ">

	@foreach(var item in Model)
	{
			<div class="col-md-4 col-xs-6   mb-3" >
			<div class="card mb-3 shadow mt-5  bg-white rounded" style="max-width: 650px; min-width:201px; min-height:350px;">
				<div class="row g-0">
					<div class="col-md-12">
						<div class="card-header text-white   "style="background-color:#2EA3F2;">
							<p class="card-text">
								<h5 class="card-title" >
									@item.Emri
								
									@if(User.Identity.IsAuthenticated && User.IsInRole("Admin")){
	
									<a class="text-white float-right" style="padding:5px;" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
								
									<a class="text-white float-right" style="padding:5px;" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
									}
								</h5>
							</p>
						</div>
					</div>
					<div class="col-md-10 mx-auto">
								<a  asp-action="Details" asp-route-id="@item.Id">
										<img src="@item.FotoUrl"   style=" width: 100%;
    height: 40vh; 
    object-fit:contain;" alt="@item.Emri">
								</a>
				
					</div>
					
					 <div class="col-md-12">
                        <div class="card-footer text-center">
                            <p class="card-text">
                          
                                    <a class="btn btn-outline-primary " asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Detajet
                                </a>
                               
                                
                            </p>
                        </div>
                    </div>
				</div>
			</div>
		</div>
	}

</div>
@if(User.Identity.IsAuthenticated && User.IsInRole("Admin")){
	
@await Html.PartialAsync("_CreateItem","Sherbime")
}